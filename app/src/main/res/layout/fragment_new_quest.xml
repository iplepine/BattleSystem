<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rootLayout"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:padding="24dp">

    <TextView
        android:id="@+id/questTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:text="제목"></TextView>

    <TextView
        android:id="@+id/questDescription"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:text="퀘스트 설명"
        android:layout_marginTop="24dp"
        app:layout_constraintTop_toBottomOf="@id/questTitle" />

    <TextView
        android:id="@+id/rewardTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/questDescription"
        android:text="보상"
        android:layout_marginTop="6dp"
        ></TextView>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rewardRecyclerView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:maxHeight="120dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_margin="6dp"
        app:layout_constraintTop_toBottomOf="@id/rewardTitle"
        android:orientation="horizontal"
        ></androidx.recyclerview.widget.RecyclerView>

    <TextView
        android:id="@+id/requireTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/rewardRecyclerView"
        android:text="비용"
        android:layout_marginTop="6dp"
        ></TextView>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/requireRecyclerView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:maxHeight="120dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/requireTitle"
        android:layout_margin="6dp"
        android:orientation="horizontal"
        ></androidx.recyclerview.widget.RecyclerView>

    <TextView
        android:id="@+id/rejectButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@id/acceptButton"
        app:layout_constraintTop_toBottomOf="@id/requireRecyclerView"
        android:paddingLeft="36dp"
        android:paddingRight="36dp"
        android:paddingTop="12dp"
        android:paddingBottom="12dp"
        android:text="거절"
        android:background="#00ff00"
        android:layout_marginTop="16dp"
        ></TextView>

    <TextView
        android:id="@+id/acceptButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toRightOf="@id/rejectButton"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@id/rejectButton"
        android:background="#00ff00"
        android:paddingTop="12dp"
        android:paddingBottom="12dp"
        android:paddingLeft="36dp"
        android:paddingRight="36dp"
        android:text="수락"
        ></TextView>

</androidx.constraintlayout.widget.ConstraintLayout>